<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="weather"
            type="com.bhplanine.user.graduationproject.retrofit.model.Weather" />

        <variable
            name="main"
            type="com.bhplanine.user.graduationproject.retrofit.model.Main" />
        <variable
            name="weatherDay"
            type="com.bhplanine.user.graduationproject.retrofit.model.WeatherDay"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_weather_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewBjelasnica"
            style="@style/MyCardViewStyle_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/weather_icon_text_bjelasnica"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"

                    android:textColor="@color/text"
                    android:textSize="50sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/description_bjelasnica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@{weather.description}"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/temperature_bjelasnica"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dateAndTime_bjelasnica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/temperature_bjelasnica"
                    app:layout_constraintTop_toBottomOf="@+id/description_bjelasnica" />

                <TextView
                    android:id="@+id/temperature_bjelasnica"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewJahorina"
            style="@style/MyCardViewStyle_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewBjelasnica">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/weather_icon_text_jahorina"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text"
                    android:textSize="50sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/description_jahorina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/temperature_jahorina"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dateAndTime_jahorina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/temperature_jahorina"
                    app:layout_constraintTop_toBottomOf="@+id/description_jahorina" />

                <TextView
                    android:id="@+id/temperature_jahorina"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>

</layout>